@model Sistema_de_Gestão_de_Estoque.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@{
	ViewData["Title"] = "Registro";
}
<form asp-action="Register" method="post">
    <div class="form-group">
        <h1 class="text-center">Cadastro</h1>
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" type="text" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" type="text" placeholder="(00) 00000-0000" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" type="date" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" type="password" required class="form-control" />
    </div>
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
</form>
