@model Sistema_de_Gestão_de_Estoque.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@{
	ViewData["Title"] = "Registro";
}
<form asp-action="Register" method="post">
    <div class="form-group">
        <h1 class="text-center">Cadastro</h1>
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" type="text" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" id="telefone" type="text" placeholder="(00) 00000-0000" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" type="date" required class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Senha"></label>
        <div class="input-group">
            <input asp-for="Senha" class="form-control" type="password" id="senha" required />
            <button class="btn btn-outline-secondary" type="button" onclick="MostrarSenha()">
                <i class="bi bi-eye" id="icone"></i>
            </button>
        </div>
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
</form>

@section Scripts{
    <script>
        $(function(){
            $('#telefone').mask('(00) 00000-0000');
        });
    </script>
}