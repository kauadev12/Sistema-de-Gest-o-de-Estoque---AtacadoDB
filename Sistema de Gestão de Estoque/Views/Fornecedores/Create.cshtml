@model Sistema_de_Gestão_de_Estoque.Models.Fornecedor



<style>
    .create-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }
</style>

<div class="create-container">
    <h2 class="text-center">Novo Fornecedor</h2>
    <form asp-action="Create">
        <div class="form-group">
            <label>Nome:</label>    
            <input asp-for="Nome" class="form-control"  required/>
        </div>

        <div class="form-group">
            <label>CNPJ:</label><br />
            <input asp-for="CNPJ" class="form-control" id="cnpj" type="text" placeholder="00.000.000/0000-00" maxlength="18" required />
        <div class="form-group">
            <label>Telefone:</label><br />
                <input asp-for="Telefone" class="form-control" id="telefone" type="text" placeholder="(00) 00000-0000" maxlength="15" required/>
        </div>
        <div class="form-group">
            <label>Email:</label><br />
            <input asp-for="Email" class="form-control" type="email" required/><p></p>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Salvar</button>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        $(function(){
            $('#cnpj').mask('00.000.000/0000-00', {reverse: true});
            $('#telefone').mask('(00) 00000-0000');
        });
    </script>
}